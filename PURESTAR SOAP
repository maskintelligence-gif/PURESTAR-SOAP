    <script>
        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navLinks = document.getElementById('navLinks');
        
        if (mobileMenuBtn) {
            mobileMenuBtn.addEventListener('click', () => {
                navLinks.classList.toggle('active');
            });
        }
        
        // Close mobile menu when clicking on a link
        const navItems = document.querySelectorAll('.nav-links a');
        navItems.forEach(item => {
            item.addEventListener('click', () => {
                navLinks.classList.remove('active');
            });
        });

        // Check if images loaded properly, show fallback if not
        document.addEventListener('DOMContentLoaded', function() {
            const images = document.querySelectorAll('img');
            images.forEach(img => {
                img.onerror = function() {
                    // If header logo fails, ensure text fallback is visible
                    if (img.classList.contains('logo-image')) {
                        document.querySelector('.logo-fallback').style.display = 'block';
                    }
                    // If hero logo fails, show text fallback
                    if (img.classList.contains('hero-logo')) {
                        document.querySelector('.logo-text-fallback').style.display = 'block';
                    }
                };
            });
        });
    </script>
